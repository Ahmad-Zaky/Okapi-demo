{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "ModuleDescriptor",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "url": {"type": ["string", "null"]},
    "provides" : {
      "type": ["array", "null"],
      "items" : {
        "type" : "object",
        "properties" : {
          "id" : {"type": "string"},
          "version" : {"type": "string"}
        }
      }
    },
    "requires" : {
      "type": ["array", "null"],
      "items" : {
        "type" : "object",
        "properties" : {
          "id" : {"type": "string"},
          "version" : {"type": "string"}
        }
      }
    },
    "descriptor" : {
      "type": ["object", "null"],
      "properties": {
        "cmdlineStart": {"type": "string"},
        "cmdlineStop": {"type": ["string", "null"]}
      }
    },
    "routingEntries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "methods": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "path": {"type": "string"},
          "level": {"type": "string"},
          "type": {"type": "string"}
        }
      }
    }
  }
}
